@model IEnumerable<WebApplication1.Models.ObstacleData>
@using WebApplication1.Models

@{
    ViewData["Title"] = "My Reports";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">My Reports</h1>
            <p class="text-muted mb-0">View and manage your obstacle reports</p>
        </div>
        <a asp-controller="Obstacle" asp-action="DataForm" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Report
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="text-muted mt-3">You haven't submitted any reports yet.</p>
            <a asp-controller="Obstacle" asp-action="DataForm" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Submit Your First Report
            </a>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var report in Model)
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <!-- Report Info -->
                                <div class="col-md-8">
                                    <h5 class="card-title mb-2">
                                        @report.ObstacleName
                                        @if (report.IsDraft)
                                        {
                                            <span class="badge bg-secondary ms-2">
                                                <i class="bi bi-file-earmark-text"></i> Draft
                                            </span>
                                        }
                                </h5>

                                <p class="card-text text-muted mb-2">
                                    @(report.ObstacleDescription?.Length > 120
                                                                    ? report.ObstacleDescription.Substring(0, 120) + "..."
                                                                    : report.ObstacleDescription)
                            </p>

                                    <div class="small text-muted mb-2">
                                        <i class="bi bi-rulers"></i> Height: @report.ObstacleHeight?.ToString("0.##") m
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar3"></i> @report.ReportedAt.ToString("dd.MM.yyyy HH:mm")
                                    </div>

                                    <!-- Status Badge -->
                                    <div class="mb-2">
                                @if (report.IsDraft)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-file-earmark-text"></i> Draft - Not Submitted
                                            </span>
                                        }
                                        else
                                        {
                                            switch (report.Status)
                                            {
                                                case ReportStatus.Pending:
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-clock"></i> Pending Review
                                                    </span>
                                                    break;
                                                case ReportStatus.Approved:
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Approved
                                                    </span>
                                                    if (!string.IsNullOrEmpty(report.ReviewedByName))
                                                    {
                                                        <span class="small text-muted ms-2">
                                                            by @report.ReviewedByName on @report.LastReviewedAt?.ToString("dd.MM.yyyy")
                                                        </span>
                                                    }
                                                    break;
                                                case ReportStatus.NotApproved:
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> Rejected
                                                    </span>
                                                    if (!string.IsNullOrEmpty(report.ReviewedByName))
                                                    {
                                                        <span class="small text-muted ms-2">
                                                            by @report.ReviewedByName on @report.LastReviewedAt?.ToString("dd.MM.yyyy")
                                                        </span>
                                                    }
                                                    break;
                                            }
                                        }
                                    </div>

                                    <!-- Admin Feedback (for rejected reports) -->
                                    @if (report.Status == ReportStatus.NotApproved && !string.IsNullOrEmpty(report.AdminComments))
                                    {
                                        <div class="alert alert-danger mb-0 mt-2">
                                            <div class="d-flex">
                                                <i class="bi bi-info-circle me-2"></i>
                                                <div>
                                                    <strong>Rejection Feedback:</strong>
                                                    <p class="mb-0 mt-1">@report.AdminComments</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- Actions -->
                                <div class="col-md-4 d-flex align-items-center justify-content-end">
                                    <div class="btn-group-vertical gap-2">
                                        @if (report.IsDraft)
                                        {
                                            <a asp-action="EditReport" asp-route-id="@report.Id"
                                               class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Edit Draft
                                            </a>
                                            <a asp-controller="Obstacle" asp-action="DataForm" asp-route-id="@report.Id"
                                               class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-send"></i> Submit for Review
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="ViewReport" asp-route-id="@report.Id"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card border-secondary">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Drafts</h6>
                        <p class="h4 mb-0">@Model.Count(r => r.IsDraft)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Pending</h6>
                        <p class="h4 mb-0">@Model.Count(r => !r.IsDraft && r.Status == ReportStatus.Pending)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Approved</h6>
                        <p class="h4 mb-0">@Model.Count(r => r.Status == ReportStatus.Approved)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-danger">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Rejected</h6>
                        <p class="h4 mb-0">@Model.Count(r => r.Status == ReportStatus.NotApproved)</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>