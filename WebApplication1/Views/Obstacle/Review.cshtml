@model IEnumerable<WebApplication1.Models.ObstacleData>
@using WebApplication1.Models
@using System.Globalization

@{
    ViewData["Title"] = "Admin Review";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Obstacle Reports — Review</h2>

    <div class="d-flex gap-2">
        <form asp-action="Review" method="get" class="d-flex">
            <input type="search" name="q" class="form-control form-control-sm" placeholder="Search by name, reporter or id" />
            <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">Search</button>
        </form>

        <div class="btn-group">
            <a asp-action="ReviewPending" class="btn btn-sm btn-outline-secondary">Pending</a>
            <a asp-action="Review" class="btn btn-sm btn-outline-secondary">All</a>
        </div>
    </div>
</div>

<form asp-action="BulkUpdate" method="post">
    @Html.AntiForgeryToken()

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:38px;">
                        <input type="checkbox" id="select-all" aria-label="Select all reports" />
                    </th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Height (m)</th>
                    <th class="d-none d-md-table-cell">Description</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedIds" value="@item.Id" class="select-item" />
                        </td>
                        <td>@item.Id</td>
                        <td>
                            <a asp-action="ViewReport" asp-route-id="@item.Id" class="text-decoration-none">
                                @item.ObstacleName
                            </a>
                        </td>
                        <td>@item.Category?.Name</td>
                        <td>@string.Format(CultureInfo.CurrentCulture, "{0:0.##}", item.ObstacleHeight)</td>
                        <td class="d-none d-md-table-cell text-truncate" style="max-width:320px;">@item.ObstacleDescription</td>
                        <td>
                            @switch (item.Status)
                            {
                                case ReportStatus.Pending:
                                    <span class="badge text-bg-warning text-dark">Pending</span>
                                    break;
                                case ReportStatus.Approved:
                                    <span class="badge text-bg-success">Approved</span>
                                    break;
                                case ReportStatus.NotApproved:
                                    <span class="badge text-bg-danger">Not Approved</span>
                                    break;
                            }
                        </td>
                        <td class="text-end">
                            <div class="d-inline-flex gap-1">
                                <form asp-action="UpdateStatus" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="@ReportStatus.Approved" />
                                    <button type="submit" class="btn btn-sm btn-success" @(item.Status == ReportStatus.Approved ? "disabled" : null)>Approve</button>
                                </form>

                                <button type="button" class="btn btn-sm btn-outline-danger ms-1" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id">Reject</button>

                                <a asp-action="EditReport" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary ms-1">Edit</a>
                            </div>
                        </td>
                    </tr>

                    @* Reject modal *@
                    <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <form asp-action="UpdateStatus" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="@ReportStatus.NotApproved" />
                                    <div class="modal-header">
                                        <h5 class="modal-title">Reject report #@item.Id</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Feedback to reporter (optional)</label>
                                            <textarea name="adminComments" class="form-control" rows="3" placeholder="Explain reason for rejection..."></textarea>
                                        </div>
                                        <p class="small text-muted mb-0">A notification will be sent to the reporter if provided.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Reject</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex gap-2">
            <button type="submit" name="bulkAction" value="approve" class="btn btn-sm btn-success">Approve selected</button>
            <button type="submit" name="bulkAction" value="reject" class="btn btn-sm btn-outline-danger">Reject selected</button>
        </div>

        <div class="text-muted small">Displayed: @Model?.Count() ?? 0</div>
    </div>
</form>

@section Scripts {
    <script>
        (function () {
            const selectAll = document.getElementById('select-all');
            const items = Array.from(document.querySelectorAll('.select-item'));

            selectAll?.addEventListener('change', (e) => {
                items.forEach(i => i.checked = selectAll.checked);
            });
        })();
    </script>
}

