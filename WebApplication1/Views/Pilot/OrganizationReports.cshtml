@model IEnumerable<WebApplication1.Models.ObstacleData>
@using WebApplication1.Models

@{
    ViewData["Title"] = $"{ViewBag.OrganizationName} Reports";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">@ViewBag.OrganizationName Reports</h1>
            <p class="text-muted mb-0">View all obstacle reports from your organization</p>
        </div>
        <div class="btn-group">
            <a asp-action="Log" class="btn btn-outline-secondary">
                <i class="bi bi-person"></i> My Reports
            </a>
            <a asp-action="OrganizationReports" class="btn btn-primary active">
                <i class="bi bi-building"></i> Organization Reports
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-building" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="text-muted mt-3">No reports from @ViewBag.OrganizationName yet.</p>
        </div>
    }
    else
    {
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i>
            <strong>Organization View:</strong> This shows all submitted reports from @ViewBag.OrganizationName members.
            Draft reports are not included for privacy.
        </div>

        <div class="row g-3">
            @foreach (var report in Model)
            {
                var isOwnReport = report.ReportedByUserId == currentUserId;

                <div class="col-12">
                    <div class="card shadow-sm @(isOwnReport ? "border-primary" : "")">
                        @if (isOwnReport)
                        {
                            <div class="card-header bg-primary text-white py-1 px-3">
                                <small><i class="bi bi-star-fill"></i> Your Report</small>
                            </div>
                        }
                        <div class="card-body">
                            <div class="row">
                                <!-- Report Info -->
                                <div class="col-md-8">
                                    <h5 class="card-title mb-2">
                                        @report.ObstacleName
                                    </h5>

                                    <p class="card-text text-muted mb-2">                                        
                                        @(report.ObstacleDescription?.Length > 120 ? report.ObstacleDescription.Substring(0, 120) + "..." : report.ObstacleDescription)
                                    </p>

                                    <div class="small text-muted mb-2">
                                        <i class="bi bi-person"></i> Reported by: <strong>@report.ReporterName</strong>
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-rulers"></i> Height: @report.ObstacleHeight?.ToString("0.##") m
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar3"></i> @report.ReportedAt.ToString("dd.MM.yyyy HH:mm")
                                    </div>

                                    <!-- Status Badge -->
                                    <div class="mb-2">
                                        @switch (report.Status)
                                        {
                                            case ReportStatus.Pending:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-clock"></i> Pending Review
                                                </span>
                                                break;
                                            case ReportStatus.Approved:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Approved
                                                </span>
                                                if (!string.IsNullOrEmpty(report.ReviewedByName))
                                                {
                                                    <span class="small text-muted ms-2">
                                                        by @report.ReviewedByName on @report.LastReviewedAt?.ToString("dd.MM.yyyy")
                                                    </span>
                                                }
                                                break;
                                            case ReportStatus.NotApproved:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Rejected
                                                </span>
                                                if (!string.IsNullOrEmpty(report.ReviewedByName))
                                                {
                                                    <span class="small text-muted ms-2">
                                                        by @report.ReviewedByName on @report.LastReviewedAt?.ToString("dd.MM.yyyy")
                                                    </span>
                                                }
                                                break;
                                        }
                                    </div>

                                    <!-- Location Info -->
                                    @if (report.Latitude.HasValue && report.Longitude.HasValue)
                                    {
                                        <div class="small text-muted">
                                            <i class="bi bi-geo-alt"></i>
                                            Location: @(report.Latitude?.ToString("0.####"))°, @(report.Longitude?.ToString("0.####"))°
                                        </div>
                                    }
                                </div>

                                <!-- Actions -->
                                <div class="col-md-4 d-flex align-items-center justify-content-end">
                                    @if (isOwnReport)
                                    {
                                        <a asp-action="ViewReport" asp-route-id="@report.Id"
                                           class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i> View My Report
                                        </a>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-outline-secondary btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#reportModal@(report.Id)">
                                            <i class="bi bi-eye"></i> View Details
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal for viewing other people's reports (read-only) -->
                @if (!isOwnReport)
                {
                    <div class="modal fade" id="reportModal@(report.Id)" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@report.ObstacleName</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Obstacle Name</dt>
                                        <dd class="col-sm-8">@report.ObstacleName</dd>

                                        <dt class="col-sm-4">Height</dt>
                                        <dd class="col-sm-8">@report.ObstacleHeight?.ToString("0.##") m</dd>

                                        <dt class="col-sm-4">Description</dt>
                                        <dd class="col-sm-8">@report.ObstacleDescription</dd>

                                        <dt class="col-sm-4">Location</dt>
                                        <dd class="col-sm-8">
                                            @if (report.Latitude.HasValue && report.Longitude.HasValue)
                                            {
                                                
                                                <span>@(report.Latitude?.ToString("0.######"))°, @(report.Longitude?.ToString("0.######"))°</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Reported By</dt>
                                        <dd class="col-sm-8">
                                            @report.ReporterName
                                            <br />
                                            <small class="text-muted">@report.ReportedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                        </dd>

                                        <dt class="col-sm-4">Status</dt>
                                        <dd class="col-sm-8">
                                            @switch (report.Status)
                                            {
                                                case ReportStatus.Pending:
                                                    <span class="badge bg-warning text-dark">Pending Review</span>
                                                    break;
                                                case ReportStatus.Approved:
                                                    <span class="badge bg-success">Approved</span>
                                                    break;
                                                case ReportStatus.NotApproved:
                                                    <span class="badge bg-danger">Rejected</span>
                                                    break;
                                            }
                                        </dd>

                                        @if (report.Status == ReportStatus.NotApproved && !string.IsNullOrEmpty(report.AdminComments))
                                        {
                                            <dt class="col-sm-4">Rejection Reason</dt>
                                            <dd class="col-sm-8">
                                                <div class="alert alert-danger mb-0">
                                                    @report.AdminComments
                                                </div>
                                            </dd>
                                        }
                                    </dl>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card border-secondary">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Reports</h6>
                        <p class="h4 mb-0">@Model.Count()</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Pending</h6>
                        <p class="h4 mb-0">@Model.Count(r => r.Status == ReportStatus.Pending)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Approved</h6>
                        <p class="h4 mb-0">@Model.Count(r => r.Status == ReportStatus.Approved)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-danger">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Rejected</h6>
                        <p class="h4 mb-0">@Model.Count(r => r.Status == ReportStatus.NotApproved)</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>