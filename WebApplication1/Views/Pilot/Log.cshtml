@model IEnumerable<WebApplication1.Models.ObstacleData>
@using WebApplication1.Helpers
@using WebApplication1.Models

@{
    ViewData["Title"] = "Organization Reports";
    var currentUserId = ViewBag.CurrentUserId as string;
    var orgName = ViewBag.OrganizationName as string;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">@orgName Reports</h1>
            <p class="text-muted mb-0">View and manage reports from your organization</p>
        </div>
        <a asp-controller="Obstacle" asp-action="DataForm" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Report
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="text-muted mt-3">No reports from @orgName yet.</p>
            <a asp-controller="Obstacle" asp-action="DataForm" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Submit Your First Report
            </a>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var report in Model)
            {
                var isOwnReport = report.ReportedByUserId == currentUserId;
                var isDraft = report.IsProbablyDraft;

                <div class="col-12">
                    <div class="card shadow-sm @(isOwnReport ? "border-primary" : "")">
                        @if (isOwnReport)
                        {
                            <div class="card-header bg-primary text-white py-1 px-3">
                                <small><i class="bi bi-star-fill"></i> Your Report</small>
                            </div>
                        }
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5 class="card-title mb-2">
                                        @report.ObstacleName
                                        @if (isDraft && isOwnReport)
                                        {
                                            <span class="badge bg-secondary ms-2">
                                                <i class="bi bi-file-earmark-text"></i> Draft
                                            </span>
                                        }
                                    </h5>

                                    <p class="card-text text-muted mb-2">
                                        @(report.ObstacleDescription?.Length > 120
                                                                    ? report.ObstacleDescription.Substring(0, 120) + "..."
                                                                    : report.ObstacleDescription)
                                    </p>

                                    <div class="small text-muted mb-2">
                                        @if (!isOwnReport)
                                        {
                                            <span><i class="bi bi-person"></i> @report.ReporterName</span>
                                            <span class="mx-2">•</span>
                                        }
                                        <i class="bi bi-rulers"></i> Height: @report.ObstacleHeight?.ToString("0.##") m
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar3"></i> @report.ReportedAt.ToString("dd.MM.yyyy HH:mm")
                                    </div>

                                    <div class="mb-2">
                                        @if (isDraft && isOwnReport)
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-file-earmark-text"></i> Draft - Not Submitted
                                            </span>
                                        }
                                        else
                                        {
                                            switch (report.Status)
                                            {
                                                case ReportStatus.Pending:
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-clock"></i> Pending Review
                                                    </span>
                                                    break;
                                                case ReportStatus.Approved:
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Approved
                                                    </span>
                                                    if (!string.IsNullOrEmpty(report.ReviewedByName))
                                                    {
                                                        <span class="small text-muted ms-2">
                                                            by @report.ReviewedByName
                                                        </span>
                                                    }
                                                    break;
                                                case ReportStatus.NotApproved:
                                                    if (!isDraft)
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle"></i> Rejected
                                                        </span>
                                                        if (!string.IsNullOrEmpty(report.ReviewedByName))
                                                        {
                                                            <span class="small text-muted ms-2">
                                                                by @report.ReviewedByName
                                                            </span>
                                                        }
                                                    }
                                                    break;
                                            }
                                        }
                                    </div>

                                    @if (isOwnReport && report.Status == ReportStatus.NotApproved && !isDraft && !string.IsNullOrEmpty(report.AdminComments))
                                    {
                                        <div class="alert alert-danger mb-0 mt-2">
                                            <div class="d-flex">
                                                <i class="bi bi-info-circle me-2"></i>
                                                <div>
                                                    <strong>Rejection Feedback:</strong>
                                                    <p class="mb-0 mt-1">@report.AdminComments</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-4 d-flex align-items-center justify-content-end">
                                    <div class="btn-group-vertical gap-2">
                                        @if (isOwnReport)
                                        {
                                            <a asp-action="EditReport" asp-route-id="@report.Id"
                                               class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Edit Report
                                            </a>
                                            <a asp-action="ViewReport" asp-route-id="@report.Id"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-primary btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#reportModal@(report.Id)">
                                                <i class="bi bi-eye"></i> View Details
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* Modal for viewing other people's reports *@
                @if (!isOwnReport)
                {
                    <div class="modal fade" id="reportModal@(report.Id)" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@report.ObstacleName</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Obstacle Name</dt>
                                        <dd class="col-sm-8">@report.ObstacleName</dd>

                                        <dt class="col-sm-4">Height</dt>
                                        <dd class="col-sm-8">@report.ObstacleHeight?.ToString("0.##") m</dd>

                                        <dt class="col-sm-4">Description</dt>
                                        <dd class="col-sm-8">@report.ObstacleDescription</dd>

                                        <dt class="col-sm-4">Location</dt>
                                        <dd class="col-sm-8">
                                            @if (report.Latitude.HasValue && report.Longitude.HasValue)
                                            {
                                                <span>@(report.Latitude?.ToString("0.######"))°, @(report.Longitude?.ToString("0.######"))°</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Reported By</dt>
                                        <dd class="col-sm-8">
                                            @report.ReporterName
                                            <br />
                                            <small class="text-muted">@report.ReportedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                        </dd>

                                        <dt class="col-sm-4">Status</dt>
                                        <dd class="col-sm-8">
                                            @switch (report.Status)
                                            {
                                                case ReportStatus.Pending:
                                                    <span class="badge bg-warning text-dark">Pending Review</span>
                                                    break;
                                                case ReportStatus.Approved:
                                                    <span class="badge bg-success">Approved</span>
                                                    break;
                                                case ReportStatus.NotApproved:
                                                    <span class="badge bg-danger">Rejected</span>
                                                    break;
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    <h2 class="mb-3">My Reports</h2>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Obstacle</th>
                <th>Height (@(User.IsInRole("Pilot") ? "ft" : "m"))</th>
                <th>Reported At</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ObstacleName</td>
                    <td>
                        @{
                            // ObstacleHeight is decimal?; UnitConverter uses decimal arithmetic.
                            if (User.IsInRole("Pilot"))
                            {
                                var feet = UnitConverter.ToFeet(item.ObstacleHeight);
                                if (feet.HasValue)
                                {
                                    // Round to nearest whole foot for pilot display
                                    <text>@Math.Round(feet.Value, 0).ToString("F0")</text>
                                }
                                else
                                {
                                    <text>—</text>
                                }
                            }
                            else
                            {
                                if (item.ObstacleHeight.HasValue)
                                {
                                    // Show meters with one decimal for admin/others
                                    <text>@item.ObstacleHeight.Value.ToString("F1")</text>
                                }
                                else
                                {
                                    <text>—</text>
                                }
                            }
                        }
                    </td>
                    <td>@item.ReportedAt.ToString("g")</td>
                    <td>
                        @switch (item.Status)
                        {
                            case ReportStatus.Pending:
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-clock"></i> Pending Review
                                </span>;
                                break;
                            case ReportStatus.Approved:
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Approved
                                </span>;
                                break;
                            case ReportStatus.NotApproved:
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Rejected
                                </span>;
                                break;
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="ViewReport" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i> View
                        </a>
                        @if (item.ReportedByUserId == currentUserId)
                        {
                            <a asp-action="EditReport" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
