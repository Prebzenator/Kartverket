@model IEnumerable<WebApplication1.Models.ObstacleData>
@using WebApplication1.Models
@using System.Globalization

<h2 class="mb-3">Obstacle Reports – Admin Review</h2>

<div class="mb-3">
    <a asp-action="ReviewPending" class="btn btn-sm btn-outline-secondary">Show Pending Only</a>
    <a asp-action="Review" class="btn btn-sm btn-outline-secondary">Show All</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Height (m)</th>
            <th>Description</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ObstacleName</td>
                <td>@string.Format(CultureInfo.CurrentCulture, "{0:0.##}", item.ObstacleHeight)</td>
                <td class="text-truncate" style="max-width: 300px;">@item.ObstacleDescription</td>
                <td>
                    @switch (item.Status)
                    {
                        case ReportStatus.Pending:
                            <span class="badge text-bg-warning text-dark">Pending</span>
                            break;
                        case ReportStatus.Approved:
                            <span class="badge text-bg-success">Approved</span>
                            break;
                        case ReportStatus.NotApproved:
                            <span class="badge text-bg-danger">Not Approved</span>
                            break;
                    }
                </td>
                <td class="text-end">
                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="status" value="@ReportStatus.Approved" />
                        <button class="btn btn-sm btn-success"
                                @(item.Status == ReportStatus.Approved ? "disabled" : null)>
                            Approve
                        </button>
                    </form>

                    <form asp-action="UpdateStatus" method="post" class="d-inline ms-1">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="hidden" name="status" value="@ReportStatus.NotApproved" />
                        <button class="btn btn-sm btn-outline-danger"
                                @(item.Status == ReportStatus.NotApproved ? "disabled" : null)>
                            Reject
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
