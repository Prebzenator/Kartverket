@model WebApplication1.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="h5 mb-3">Create user (Admin)</h2>
                    <form asp-action="CreateUser" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <select asp-for="Role" class="form-select">
                                <option value="">-- choose --</option>
                                <option value="Pilot">Pilot</option>
                                <option value="Registry Administrator">Registry Administrator</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create user</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
