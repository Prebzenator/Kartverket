@model WebApplication1.ViewModels.ForceChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password Required";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="alert alert-warning rounded-4 mb-4 shadow-sm border-warning">
                <div class="d-flex gap-3 align-items-center">
                    <i class="bi bi-shield-exclamation fs-1"></i>
                    <div>
                        <h4 class="h6 mb-1">Security Update Required</h4>
                        <p class="mb-0 small">You must change your temporary password before continuing.</p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">
                    <form asp-action="ForceChangePassword" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Current (Temporary) Password" />
                            <label asp-for="OldPassword">Current (Temporary) Password</label>
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" aria-describedby="passwordHelp" />
                            <label asp-for="NewPassword">New Password</label>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>

                            <div id="passwordHelp" class="form-text mt-2">
                                <i class="bi bi-info-circle"></i>
                                Password must be at least <strong>6 characters</strong> long and include at least <strong>one number</strong>.
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                            <label asp-for="ConfirmPassword">Confirm New Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Set New Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}