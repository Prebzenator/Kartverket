@model string
@{
    ViewData["Title"] = "Obstacle";
}

<section class="bg-body-tertiary border-bottom">
    <div class="container py-5">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-12 col-lg-8">
                <h1 class="display-5 mb-3">Welcome</h1>
                <p class="lead text-muted mb-4">
                    Register obstacles quickly with a clean, mobile-friendly form.
                </p>
                @* Landing Page. Navigates to the obstacle registration form.*@
                <a asp-action="DataForm" asp-controller="Obstacle"
                class="btn btn-primary btn-lg">Register Obstacle</a>
            </div>
        </div>
    </div>
</section>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 text-center">
            <p class="text-muted">
                Learn more about building Web apps with ASP.NET Core at
                <a href="https://learn.microsoft.com/aspnet/core" target="_blank" rel="noopener">Microsoft Learn</a>.
            </p>
            @* If you still pass a string model, it will render here *@
            @if (!string.IsNullOrWhiteSpace(Model))
            {
                <p class="small text-muted">@Model</p>
            }
        </div>
    </div>
</div>
