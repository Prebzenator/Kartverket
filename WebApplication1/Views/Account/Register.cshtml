@model WebApplication1.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="h5 mb-3">Create an account</h2>
                    <p class="text-muted small mb-4">Register to report obstacles and manage your submissions.</p>

                    <form asp-action="Register" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                            <label asp-for="FullName">Full name</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization" class="form-label">Organization</label>
                            <select asp-for="Organization" class="form-select">
                                <option value="">-- Select organization --</option>
                                <option value="Norsk Luftambulanse (NLA)">Norsk Luftambulanse (NLA)</option>
                                <option value="Luftforsvaret">Luftforsvaret</option>
                                <option value="Politiets helikoptertjeneste">Politiets helikoptertjeneste</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Organization" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-describedby="passwordHelp" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>

                            <div id="passwordHelp" class="form-text mt-2">
                                <i class="bi bi-info-circle"></i>
                                Password must be at least <strong>6 characters</strong> long and include at least <strong>one number</strong>.
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                            <label asp-for="ConfirmPassword">Confirm password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                            <a asp-action="Login" class="btn btn-link btn-sm text-decoration-none">Already have an account? Login</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}